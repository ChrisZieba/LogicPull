<div class="row">
  <div class="col-lg-12">

    <h1>Reset a User Password</h1>
    <p>The user will need to know this password to login hereafter.</p>
    
    <div class="row">
      <div class="col-lg-8">
        <% if (msg) { %>
          <div class="alert alert-danger" role="alert">
            <%- msg %>
          </div>
        <% } %>

        <form role="form" method="post" action="" enctype="multipart/form-data">
          <input type="hidden" name="_csrf" value="<%= token %>"/>

          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" />
          </div>

          <div class="form-group">
            <label>Verify Password</label>
            <input type="password" class="form-control" name="verify_password" />
          </div>
          
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/manager/users" class="btn btn-default pull-right">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>